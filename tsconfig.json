{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "nuxt.config.ts",
    "src/**/*",           // Add your Nuxt 3 source files here
    "ecosystem.config.cjs" // Include the PM2 config file
  ],
  "exclude": [
    "node_modules" // Exclude node_modules folder
  ]
}
